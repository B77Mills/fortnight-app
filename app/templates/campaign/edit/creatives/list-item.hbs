<div class="card mnh-100">
  {{#if creative.image.src}}
    {{image-crop
      imgClass="card-img-top border-bottom"
      aspectRatio="16:9"
      originalSrc=creative.image.src
      fpX=creative.image.focalPoint.x
      fpY=creative.image.focalPoint.y
      alt="Image Preview"
    }}
  {{/if}}

  <div class="card-body">
    {{#if creative.title}}
      <h5 class="card-title">{{creative.title}}</h5>
    {{/if}}

    {{#if creative.teaser}}
      <p class="card-text">{{creative.teaser}}</p>
    {{/if}}

  </div>
  <div class="card-footer d-flex justify-content-between">
    {{campaign-creative/status-selector status=creative.status disabled=isActionRunning onChange=(action "updateStatus" creative.id)}}

    {{confirm-button
      icon="trash"
      confirmIcon="warning"
      label=""
      confirmLabel=""
      class="btn-sm btn-danger"
      disabled=isActionRunning
      onConfirm=(action "remove" creative.id)
    }}
  </div>
</div>

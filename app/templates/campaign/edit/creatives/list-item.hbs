<div class="card mnh-100">
  {{#if creative.image.src}}
    {{image-crop
      imgClass="card-img-top border-bottom"
      aspectRatio="16:9"
      originalSrc=creative.image.src
      fpX=creative.image.focalPoint.x
      fpY=creative.image.focalPoint.y
      alt="Image Preview"
    }}
  {{/if}}

  <div class="card-body">
    {{#if creative.title}}
      <h5 class="card-title">{{creative.title}}</h5>
    {{/if}}

    {{#if creative.teaser}}
      <p class="card-text">{{creative.teaser}}</p>
    {{/if}}

  </div>
  <div class="card-footer d-flex justify-content-between">

    <div class="dropup">
      <button class="btn btn-sm btn-success dropdown-toggle" disabled={{isActionRunning}} type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{entypo-icon "flag"}} Active
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="javascript:void(0);">
          Set as Draft
        </a>
      </div>
    </div>

    {{confirm-button
      icon="trash"
      confirmIcon="warning"
      label=""
      confirmLabel=""
      class="btn-sm btn-danger"
      disabled=isActionRunning
      onConfirm=(action "remove" creative.id)
    }}
  </div>
</div>

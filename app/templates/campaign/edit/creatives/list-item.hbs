<div class="card mnh-100">
  {{image-crop
    imgClass="card-img-top border-bottom"
    aspectRatio="16:9"
    originalSrc=creative.image.src
    fpX=creative.image.focalPoint.x
    fpY=creative.image.focalPoint.y
    alt="Image Preview"
  }}
  <div class="card-img-overlay">

    <div class="dropdown float-right">
      <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{entypo-icon "dots-three-vertical"}}
      </button>
      <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item d-flex justify-content-between">
          Set to Draft
          {{entypo-icon "flag"}}
        </a>

        <a class="dropdown-item d-flex justify-content-between">
          Edit
          {{entypo-icon "pencil"}}
        </a>

      </div>
    </div>
  </div>

  <div class="card-body">
    {{#if creative.title}}
      <h5 class="card-title">{{creative.title}}</h5>
    {{/if}}

    {{#if creative.teaser}}
      <p class="card-text">{{creative.teaser}}</p>
    {{/if}}

  </div>
  <div class="card-footer d-flex justify-content-between">
    {{campaign-status value=creative.status}}
    <button class="btn btn-sm btn-warning" type="button" title="Remove">
      {{entypo-icon "trash"}}
    </button>
  </div>
</div>

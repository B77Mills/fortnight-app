{{#model-form
  model=model
  shouldAutosave=true
  onSubmit=(action "update") as |form|
}}
  <div class="card-body">
    {{ partial "story/forms/full" }}
  </div>
  <div class="card-footer">
    {{model-save-button disabled=isActionRunning}}
    <div class="btn-group float-right">
      {{confirm-button
        icon="trash"
        label="Delete"
        class="btn-danger"
        disabled=isActionRunning
        onConfirm=(action "delete" model.id "story.index")
      }}
    </div>
  </div>
{{/model-form}}

{{#link-to
  "manage.story.edit" item.id
  class="list-group-item list-group-item-action flex-column align-items-start"
}}
  <div class="d-flex flex-row justify-content-between">

    <div class="d-flex flex-column">
      <div class="d-flex flex-row">
        {{#if item.primaryImage.src}}
          <div class="d-flex flex-column my-auto mr-3">
            {{imgix-img originalSrc=item.primaryImage.src width=100 height=100 w="100" h="100" fit="crop" crop="focalpoint"}}
          </div>
        {{/if}}
        <div class="d-flex flex-column">
          <h4 class="mb-1">{{item.title}}</h4>
          <p class="mb-1">{{story-status publishedAt=item.publishedAt disposition=item.status}}</p>
          <p class="mb-0">Advertiser: {{item.advertiser.name}}</p>
          <p class="mb-1">Campaigns: {{if item.campaigns.totalCount item.campaigns.totalCount 0}}</p>
          <small>ID: {{item.id}}</small>
        </div>
      </div>
    </div>

    <div class="d-none d-md-flex flex-column align-items-end text-right">
      {{user-attribution class="mb-2" label="Updated" user=item.updatedBy date=item.updatedAt}}
      {{user-attribution label="Created" user=item.createdBy date=item.createdAt}}
    </div>

  </div>
{{/link-to}}

{{#link-to
  "manage.advertiser.edit" item.id
  class="list-group-item list-group-item-action flex-column align-items-start"
}}
  <div class="d-flex flex-row justify-content-between">
    <div class="d-flex flex-column">
      <h4 class="mb-1">{{item.name}}</h4>
      <p class="mb-1">Campaigns: {{if item.campaigns.totalCount item.campaigns.totalCount 0}}</p>
      <small>ID: {{item.id}}</small>
    </div>
    <div class="d-flex flex-column align-items-end text-right">
      {{#if item.updatedAt}}
        <small class="d-block" title="{{moment-format item.updatedAt 'MMM Do, YYYY h:mm a'}}">
          {{entypo-icon "clock"}} Updated {{moment-from-now item.updatedAt}}
        </small>
      {{/if}}
      {{!-- {{user-attribution class="mb-2" label="Updated" user=item.updatedBy date=item.updatedAt}} --}}
      {{!-- {{user-attribution label="Created" user=item.createdBy date=item.createdAt}} --}}
    </div>
  </div>
{{/link-to}}

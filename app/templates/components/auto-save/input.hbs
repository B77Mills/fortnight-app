{{yield (hash
  isChanging=isChanging
  changeError=changeError
  changeComplete=changeComplete
  isValid=isValid
  validationMessage=validationMessage
  element=(component "form-elements/input"
    id=id
    autocomplete=autocomplete
    tabindex=tabindex
    autofocus=autofocus
    class=class
    type=type
    value=_value
    name=name
    title=title
    required=required
    placeholder=placeholder
    disabled=disabled
    readonly=_readonly
    aria-describedby=aria-describedby
    pattern=pattern
    min=min
    max=max
    step=step
    maxlength=maxlength

    validator=validator
    on-insert=(action "setChildInputComponent")
    input=(action "debounceInput")
    change=(action "debounceChange")
  )
  elements=(hash
    indicator=(component "auto-save/indicator"
      visible=shouldSave
      isChanging=isChanging
      changeComplete=changeComplete
      validationMessage=_input.validationMessage
    )
    invalid-feedback=(component "auto-save/invalid-feedback"
      message=_input.validationMessage
    )
  )
)}}



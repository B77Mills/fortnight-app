{{!-- {{#-bs/button 'success' class='create float-right fixed-bottom' click=(route-action 'linkTo' 'advertiser.create')}}{{-ion 'android-create'}} Create{{/-bs/button}} --}}

<div class="row">
  <div class="col">
    <h3 class="mb-0">
      Advertisers
      <div class="float-right">
        {{#link-to 'advertiser.create' class='btn btn-outline-primary btn-sm'}}
          {{-ion 'android-create'}} Create
        {{/link-to}}
      </div>
    </h3>
  </div>
</div>
<hr>
{{partial 'list/controls'}}

<div class="row mb-2">
  <div class="col">
    {{#each model as |advertiser|}}
      {{#link-to 'advertiser.edit' advertiser.id class='list-group-item list-group-item-action flex-column align-items-start'}}
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">{{advertiser.name}}</h5>
          <small>Modified {{moment-from-now advertiser.updatedAt}}</small>
        </div>

        <div class="float-right">
          <button type="button" class="btn btn-sm btn-light">
            Campaigns <span class="badge badge-light">{{ advertiser.campaignCount }}</span>
            <span class="sr-only">existing campaigns</span>
          </button>
        </div>

      <small>
        {{advertiser.id}}
      </small>

      {{/link-to}}
      {{else}}
        <h5 class="text-primary">No results found.</h5>
      {{/each}}
  </div>
</div>
